<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GetstartedActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kos Finder"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:fontFamily="@font/poppins"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"/>


    </LinearLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temukan Kosan Idaman-\nmu, Mudah dan Cepat!"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        android:textSize="25sp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nyaman, Aman, dan Terjangkau. Cari \nKosan Sesuai Kebutuhanmu di Sini!"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:textColor="#82868E"
        android:fontFamily="@font/poppins"
        android:textStyle="normal"
        android:layout_marginTop="15dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="Jelejahi Sekarang"
        android:textAllCaps="false"
        android:backgroundTint="#5E49C3"
        android:background="@drawable/button_rounded"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:id="@+id/btnGetStarted"
        android:textSize="16sp"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:src="@drawable/bottomgetstarted" />

    </RelativeLayout>


</LinearLayout>
